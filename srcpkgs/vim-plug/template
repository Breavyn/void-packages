do_install() {
	vinstall plug.vim 644 usr/share/vim/vim81/autoload
	vlicense LICENSE
}

neovim-plug_package() {
	depends="neovim"
	pkg_install() {
		vinstall plug.vim 644 usr/share/nvim/runtime/autoload
		vlicense LICENSE
	}
}
